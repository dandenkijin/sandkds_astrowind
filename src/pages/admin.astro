---
/**
 * Static placeholder for /admin to avoid redirect loops.
 * Netlify handles rewrites to /admin/index.html (public) with status 200.
 */
export const prerender = true;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Tina Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- No client-side redirects to avoid loops -->
  </head>
  <body style="font-family: system-ui, -apple-system, sans-serif; text-align:center; padding:2rem">
    <h1>Tina Admin</h1>
    <p>This page intentionally contains no redirects.</p>
    <p>Open <a href="/admin/index.html">/admin/index.html</a> directly.</p>
  </body>
</html>
