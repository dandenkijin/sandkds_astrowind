---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
// import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FormsSPA from '~/components/justle-spa/FormsSPA.svelte';

const metadata = {
  title: 'Justle - Contact Us',
  description: 'Get in touch with us for any questions or support. We\'re here to help!',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <div class="relative">
    <div 
      class="absolute inset-0 pointer-events-none bg-[radial-gradient(ellipse_at_center,var(--tw-gradient-stops))] from-pink-100/80 via-pink-100/40 to-transparent dark:from-pink-900/20 dark:via-pink-900/10 dark:to-transparent" 
      aria-hidden="true"
    ></div>
    <HeroText
      tagline="Family Support Services"
    >
      <Fragment slot="title">
        Let's Get Started!
      </Fragment>

      <Fragment slot="subtitle">
        Fill out the form below to get started with your support journey.
      </Fragment>

  </HeroText>
    <!-- Form Section -->
    <section aria-labelledby="form-heading" class="py-12 bg-white dark:bg-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 md:p-8 transition-colors duration-300 border border-gray-200 dark:border-gray-700">
          <h2 id="form-heading" class="sr-only">Contact Form</h2>
          <div class="w-full">
            <FormsSPA client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-16 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 md:p-8 transition-colors duration-300 border border-gray-200 dark:border-gray-700">
          <CallToAction
            title="Need more help?"
            subtitle="Our team is ready to assist you with any questions or concerns."
            actions={[
              {
                text: 'Email Us',
                href: 'mailto:contact@example.com',
                type: 'button',
              },
              {
                text: 'Call Us',
                href: 'tel:+1234567890',
                type: 'button',
              }
            ]}
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
