---
/// <reference path="../types.d.ts" />
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Features from '~/components/widgets/Features.astro';
// astro island, svelte component
import ClientSPA from '../components/client-spa/ClientSPA.svelte';

const metadata = {
  title: 'Family Support Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <div class="relative">
    <div 
      class="absolute inset-0 pointer-events-none bg-[radial-gradient(ellipse_at_center,var(--tw-gradient-stops))] from-pink-100/80 via-pink-100/40 to-transparent dark:from-pink-900/20 dark:via-pink-900/10 dark:to-transparent" 
      aria-hidden="true"
    ></div>
    <Hero
      tagline="Family Support Services"
      actions={[
        {
          variant: 'primary',
          target: '_blank',
          text: `Let's Get Started`,
          href: '#',
          icon: 'tabler:download',
        },
        { text: 'Learn more', href: '#features' },
      ]}
    >
      <Fragment slot="title">
        Your Journey, Safely Supported Every Step
      </Fragment>

      <Fragment slot="subtitle">
        At Snugs & Kisses, we believe every family deserves to feel cherished, supported, and confident. Our expert doulas, lactation consultants, and newborn care specialists provide gentle, nonjudgmental care tailored to your unique needs.
      </Fragment>
    {/* <Fragment slot="image">
      <YouTube id="u792CxDT7cE" title=" The Essential Ingredient: Doula " />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment> */}
  </Hero>
  
  <!-- SPA Section - Full Width -->
  <section class="w-full">
    <div class="w-[90vw] mx-auto">
      <ClientSPA client:load />
    </div>
  </section>

 
  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why Choose Our Doula Service"
    subtitle="Experience the difference with our compassionate and professional doula care, designed to support you through every step of your journey."
    columns={3}
    items={[
      {
        title: 'Personalized Birth Support',
        description:
          'Tailored care plans that respect your birth preferences and provide continuous physical and emotional support throughout labor and delivery.',
        icon: 'tabler:heart',
      },
      {
        title: 'Evidence-Based Care',
        description: 'Our doulas are trained in the latest research and best practices to ensure you receive the best possible care.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Continuous Support',
        description:
          'Our doulas provide continuous support throughout your labor, delivery, and postpartum period, ensuring you feel safe and supported every step of the way.',
        icon: 'tabler:clock',
      },
      {
        title: 'Postpartum Support',
        description: 'Comprehensive postpartum care including breastfeeding support, newborn care education, and emotional support during the fourth trimester.',
        icon: 'tabler:baby-carriage',
      },
      {
        title: 'Partner & Family Inclusion',
        description: 'We value and support the entire family unit, offering guidance on how partners and family members can be effectively involved in the birthing process.',
        icon: 'tabler:users',
      },
      {
        title: '24/7 Availability',
        description: 'Round-the-clock support as your due date approaches and throughout your labor and delivery process.',
        icon: 'tabler:phone-call',
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->
  <Testimonials
    testimonials={[
      {
        title: 'Invaluable Support',
        testimonial: 'Snugs & Kisses made us feel so prepared and cared for. Their support was invaluable during such an important time in our lives. We truly felt seen and heard.',
        name: 'The Miller Family',
        job: 'Dallas, TX',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Schedule a Consultation',
        href: '#',
      },
    ]}
  >
    <Fragment slot="title">Ready to feel Supported and Empowered?</Fragment>

    <Fragment slot="subtitle">
      Let's discuss how Snugs & Kisses can be a part of your beautiful journey. Schedule your complimentary consultation today.
    </Fragment>
  </CallToAction>
</Layout>
