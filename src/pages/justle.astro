---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FormsSPA from '~/components/justle-spa/FormsSPA.svelte';

const metadata = {
  title: 'Justle - Contact Us',
  description: 'Get in touch with us for any questions or support. We\'re here to help!',
};
---

<Layout metadata={metadata}>
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <section class="relative md:-mt-[76px] not-prose">
        <div 
          class="absolute inset-0 pointer-events-none bg-[radial-gradient(ellipse_at_center,var(--tw-gradient-stops))] from-pink-100/80 via-pink-100/40 to-transparent dark:from-pink-900/20 dark:via-pink-900/10 dark:to-transparent intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade" 
          aria-hidden="true" 
          data-animated="true" 
          style="transition-delay: 0ms; animation-delay: 0ms;"
        ></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
          <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
          <div class="py-12 md:py-20 pb-8 md:pb-8">
            <div class="text-center max-w-5xl mx-auto">
              <p class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade" 
                 data-animated="true" 
                 style="transition-delay: 100ms; animation-delay: 100ms;"
              >
                Contact
              </p>
              <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-gray-900 dark:text-white intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade" 
                  data-animated="true" 
                  style="transition-delay: 200ms; animation-delay: 200ms;"
              >
                Let's Connect!
              </h1>
              <div class="max-w-3xl mx-auto">
                <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade" 
                     data-animated="true" 
                     style="transition-delay: 300ms; animation-delay: 300ms;"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Form Section -->
    <section aria-labelledby="form-heading" class="py-12 bg-white dark:bg-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 md:p-8 transition-colors duration-300 border border-gray-200 dark:border-gray-700">
          <h2 id="form-heading" class="sr-only">Contact Form</h2>
          <div class="w-full">
            <FormsSPA client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-16 bg-gradient-to-b from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 md:p-8 transition-colors duration-300 border border-gray-200 dark:border-gray-700">
          <CallToAction
            title="Need more help?"
            subtitle="Our team is ready to assist you with any questions or concerns."
            actions={[
              {
                text: 'Email Us',
                href: 'mailto:contact@example.com',
                type: 'button',
              },
              {
                text: 'Call Us',
                href: 'tel:+1234567890',
                type: 'button',
              }
            ]}
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
