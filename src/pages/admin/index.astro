---
/**
 * Static placeholder page at /admin to avoid SSR/client redirect loops.
 * Netlify will rewrite /admin and /admin/* to /admin/index.html (public) with status 200.
 */
export const prerender = true;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Tina Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- No redirects here to avoid loops in production -->
  </head>
  <body style="font-family: system-ui, -apple-system, sans-serif; text-align:center; padding:2rem">
    <h1>Tina Admin</h1>
    <p>This route is intentionally static to prevent redirect loops.</p>
    <p>Open <a href="/admin/index.html">/admin/index.html</a> directly.</p>
  </body>
</html>
