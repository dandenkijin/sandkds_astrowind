---
/**
 * Remove meta redirects to prevent loops.
 * Keep a simple static fallback for unknown /admin/* routes.
 */
export const prerender = true;

export function getStaticPaths() {
  // Do not enumerate index to avoid special-case redirect behavior
  return [
    { params: { path: undefined }, props: {} }, // /admin
  ];
}
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Tina Admin Fallback</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body style="font-family: system-ui, -apple-system, sans-serif; text-align:center; padding:2rem">
    <h1>Tina Admin</h1>
    <p>This is a static fallback for admin routes.</p>
    <p>Open <a href="/admin/index.html">/admin/index.html</a> for the admin UI.</p>
  </body>
</html>
